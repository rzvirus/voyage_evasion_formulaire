{% extends 'base.html.twig' %}

{% block title %}Espace Membre{% endblock %}

{% block body %}
<div class="container mt-5">
  <div class="mb-4">
    <h2>Bienvenue dans votre espace, {{ user.username }} !</h2>
    <p>Vous êtes connecté à {{ history.dateConnexion|date('H:i:s') }}</p>
  </div>

  {% for msg in app.flashes('success') %}
    <div class="alert alert-success">{{ msg }}</div>
  {% endfor %}

  <div class="row">
    <div class="col-md-6">
      <div class="card mb-4">
        <div class="card-header">Envoyer un message</div>
        <div class="card-body">
          {{ form_start(form) }}
            {{ form_row(form.contenu) }}
            <button class="btn btn-primary mt-2">Envoyer</button>
          {{ form_end(form) }}
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="card mb-4">
        <div class="card-header">Historique de vos messages</div>
        <div class="card-body">
          {% if messages is empty %}
            <p>Aucun message envoyé.</p>
          {% else %}
            <ul class="list-group">
              {% for m in messages %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  {{ m.contenu }}
                  <span class="badge 
                    {{ m.statut == 'validé' ? 'bg-success' : 
                       m.statut == 'refusé' ? 'bg-danger' : 
                       'bg-secondary' }}">
                    {{ m.statut }}
                  </span>
                </li>
              {% endfor %}
            </ul>
          {% endif %}
        </div>
      </div>
    </div>
  </div>

  <a href="{{ path('app_logout') }}" class="btn btn-outline-secondary">Déconnexion</a>
</div>
{% endblock %}
